<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/joinTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/joinDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Description"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_below="@id/joinTitle"/>

    <TextView
        android:id="@+id/joinAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30.00"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_below="@id/joinDescription"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/joinAmount"
        android:layout_centerHorizontal="true"
        android:id="@+id/linLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmSideAButton"
            android:text="SideA" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmSideBButton"
            android:text="SideB" />
    </LinearLayout>


</RelativeLayout>
