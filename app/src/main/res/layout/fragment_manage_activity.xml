<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/createBetBtn"
            android:text="Create Bet"
            android:textColor="@color/colorSecondary"
            android:textAllCaps="false"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/manageBetsBtn"
            android:text="Manage Bets"
            android:textColor="@color/colorSecondary"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:background="@color/colorPrimaryDark"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Row2"
        android:layout_below="@id/Row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/manageFriendsBtn"
            android:text="Manage Friends"
            android:textColor="@color/colorSecondary"
            android:textAllCaps="false"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
    </LinearLayout>
</RelativeLayout>