        <EditText
            android:id="@+id/title"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Title"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/myNavy"
            android:textColorHint="@color/myBlue"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/amount_to_bet"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/amountToBet"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/myNavy"
            android:textColorHint="@color/myBlue"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white_greyish" />

        <EditText
            android:id="@+id/bet_description"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/betDescription"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/myNavy"
            android:textColorHint="@color/myBlue"
            android:backgroundTint="@color/myNavy"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white_greyish" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white_greyish" />

