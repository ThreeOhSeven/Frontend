<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/BlackTextTheme"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_title_black_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="@dimen/bet_attr_header"/>

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="@dimen/bet_attr_sub" />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_creator_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblCreator"
                    android:text="Creator"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCreator"
                    android:text="Creator"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_max_users_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblMaxUsers"
                    android:text="Max Users"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtMaxUsers"
                    android:text="Max Users"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_money_black_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblAmount"
                    android:text="Amount"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAmount"
                    android:text="Amount"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_description_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblDescription"
                    android:text="Description"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDescription"
                    android:text="Description"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_vert_menu_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblSideA"
                    android:text="Side A"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSideA"
                    android:text="Side A"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_vert_menu_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblSideB"
                    android:text="Side B"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSideB"
                    android:text="Side B"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_notifications_none_black_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblStatus"
                    android:text="Status"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtStatus"
                    android:text="Status"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_spa_black_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblWinner"
                    android:text="Winner"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtWinner"
                    android:text="Winner"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_title_black_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblTime"
                    android:text="Creation Time"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTime"
                    android:text="07/07/07"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblBetters"
            android:text="Betters"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:id="@+id/bettersList">
            </android.support.v7.widget.RecyclerView>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
</ScrollView>