<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/bet_attr_padding">

        <ImageView
            android:layout_width="@dimen/bet_attr_icon"
            android:layout_height="@dimen/bet_attr_icon"
            android:src="@drawable/ic_title_black_24dp"
            android:paddingRight="@dimen/bet_attr_padding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/bet_attr_header" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/bet_attr_sub" />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_creator_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblCreator"
                    android:text="Creator"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCreator"
                    android:text="Creator"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_max_users_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblMaxUsers"
                    android:text="Max Users"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtMaxUsers"
                    android:text="Max Users"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_money_black_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblAmount"
                    android:text="Amount"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAmount"
                    android:text="Amount"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_description_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblDescription"
                    android:text="Description"
                    android:textSize="@dimen/bet_attr_header"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDescription"
                    android:text="Description"
                    android:textSize="@dimen/bet_attr_sub"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/bet_attr_padding">

            <ImageView
                android:layout_width="@dimen/bet_attr_icon"
                android:layout_height="@dimen/bet_attr_icon"
                android:src="@drawable/ic_view_list_black_24dp"
                android:paddingRight="@dimen/bet_attr_padding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblBetters"
                android:text="Betters"
                android:textSize="@dimen/bet_attr_sub"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joinBtn"
        android:src="@drawable/ic_add_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leaveBtn"
        android:layout_below="@+id/joinBtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>